<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:padding="20dp">

    <TextView
        android:id="@+id/screen_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/kavoon"
        android:shadowColor="#F4F3F3"
        android:shadowDx="7"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:textColor="#000000"
        android:textSize="29sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ScrollView added to make content scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/navigation_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/screen_text">

        <LinearLayout
            android:id="@+id/layout_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="15dp">

            <!-- Habit Image -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/habitImageView"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop" />


            </LinearLayout>

            <!-- Habit Title -->
            <TextView
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/habitTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/title_background"
                android:fontFamily="@font/kavoon"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:shadowColor="#625F5F"
                android:shadowDx="7"
                android:shadowDy="3"
                android:shadowRadius="20"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Habit Description -->
            <!-- Buttons -->


            <androidx.core.widget.NestedScrollView
                android:layout_width="@dimen/_280sdp"
                android:layout_height="250dp"
                android:background="@drawable/bordered_textbox"
                android:padding="10dp"
                android:scrollbars="vertical">

                <TextView
                    android:id="@+id/habitDescription"
                    android:layout_width="@dimen/_260sdp"
                    android:layout_height="0dp"
                    android:lineSpacingExtra="2dp"
                    android:padding="10dp"
                    android:scrollbars="vertical"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    tools:text="Once upon a time, in a big green forest, there was a little squirrel named Benny. Benny was small but very curious. One day, a strong wind blew, and Benny’s favorite acorn fell into the river. He was scared, but he knew he had to get it back.\n Benny bravely climbed a tree and jumped onto a floating log. The river was fast, but Benny held on tight. With one big leap, he grabbed his acorn and landed safely on the riverbank! The other animals cheered, and Benny learned that courage isn’t about being big—it’s about believing in yourself!" />


            </androidx.core.widget.NestedScrollView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/save_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/login_btn_gradient"
                    android:drawableEnd="@drawable/speaker"
                    android:fontFamily="@font/kavoon"
                    android:paddingHorizontal="30dp"
                    android:shadowColor="#C3C3C3"
                    android:shadowDx="7"
                    android:shadowDy="3"
                    android:shadowRadius="5"
                    android:text="@string/speaker"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:backgroundTint="@null"
                    app:cornerRadius="50dp" />

                <Button
                    android:id="@+id/share_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/login_btn_gradient"
                    android:drawableEnd="@drawable/share"
                    android:fontFamily="@font/kavoon"
                    android:shadowColor="#C3C3C3"
                    android:shadowDx="7"
                    android:shadowDy="3"
                    android:shadowRadius="5"
                    android:text="@string/share"
                    android:textColor="@color/black"
                    android:textSize="20sp"

                    app:backgroundTint="@null"
                    app:cornerRadius="50dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/navigation_bar"
        layout="@layout/floating_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:elevation="10dp"
        android:outlineProvider="bounds"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
